generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String
  password String?
  google   Google?
  github   GitHub?
  projects Project[]
}

model Google {
  id       Int    @id @default(autoincrement())
  googleId String @unique
  user     User   @relation(fields: [userId], references: [id])
  userId   Int    @unique
}

model GitHub {
  id       Int  @id @default(autoincrement())
  githubId Int  @unique
  user     User @relation(fields: [userId], references: [id])
  userId   Int  @unique
}

model Project {
  id     Int    @id @default(autoincrement())
  name   String
  apiUrl String
  user   User   @relation(fields: [userId], references: [id])
  userId Int
  logs   Log[]
}

model Log {
  id              Int       @id @default(autoincrement())
  endpoint        String
  status          Int
  method          String
  requestTime     DateTime
  responseTime    DateTime?
  elapsedDuration String?
  clientIp        String?
  city            String?
  stateOrRegion   String?
  country         String?
  userAgent       String?
  os              String?
  device          String?
  request         String
  response        String?
  project         Project   @relation(fields: [projectId], references: [id])
  projectId       Int
}

model RefreshToken {
  id         Int      @id @default(autoincrement())
  token      String   @db.Text
  expires_in DateTime
  userId     Int      @unique
}
